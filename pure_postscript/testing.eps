%!PS-Adobe-3.0 EPSF-3.0
%%BoundingBox: 0 0 500 500

50 50 translate

/smallpause {
    /flushpage where{pop flushpage}if
    50 sleep } def

/pause {
    /flushpage where{pop flushpage}if
    sleep } def
/pagepause {
    /flushpage where{pop flushpage}if
    1000 sleep } def

/sleep {
    usertime add {
        10 {
            1 100000 div pop %busy
            .1 sin 257 cos atan pop %busy busy
        } repeat
        dup usertime le {exit}if
    } loop pop
} def

/wipe {
    1.0 1.0 1.0 setrgbcolor
    newpath
    -500 -500 moveto
    -500 500 lineto
    500 500 lineto
    500 -500 lineto
    closepath
    fill
} def

250 500 translate

1000 sleep

1 1 360 {
    1 rotate
    /i exch def
    360 i div 1.0 sub 0.0 360 i div setrgbcolor
    newpath
    0 0 moveto
    0 100 lineto
    100 100 lineto
    100 0 lineto
    closepath
    stroke
    copypage
    10 pause
} for
showpage

%EOF


